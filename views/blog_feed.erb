<!-- view/blog_feed.erb -->
<h1>Blog Feed page</h1>
<a href="new_post">Create new post</a>

 <% @posts.each do |post| %>
     <div>
       <div class="post-title"><p><%= post.title %></p></div>
       <div class="post-title"><p><%= post.content %></p></div>
       <div class="post-title"><p>Posted on: <%= post.created_at.strftime('%b %d') %></p></div>
         <% @users.each do |user| %>
           <% if post.user_id == user.id %>
             <div class="post-title"><p><%= user.username %></p></div>
           <% end %>
         <% end %>
        <!-- add new comment box for each post -->
         <form class="" action="/add_comment" method="post">
           <input type="text" name="text" maxlength="150" placeholder="Write comment...">
           <input type="hidden" name="post_id" id="current_post_id" value="<%= post.id %>">
           <input type="submit" name="submit_comment" value="Submit">
         </form>
       </div>
       <!-- display comments -->
       <% @comments = Comment.where(post_id: post.id) %>
         <% @comments.each do |comment| %>
             <div class="post-title"><p><%= comment.text %></p></div>
         <% end %>
   <% end %>
